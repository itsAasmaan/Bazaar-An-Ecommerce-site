<form action="<%= submitPath %>?_csrf=<%= locals.csrfToken  %>" method="POST" enctype="multipart/form-data">

  <p>
    <label for="title">Title</label>
    <input type="text" name="title" id="title" value="<%= product.title %>" required />
  </p>

  <div id="image-control">
    <p>
      <label for="image">Product Image</label>
      <input
        type="file" name="image" id="image" accept=".png, .jpg, .jpeg"
        <% if (imageRequired) { %> required <% } %> 
      />
    </p>
    
    <img src="" alt="Selected Image">
  </div>
  <p>
    <label for="summary">Summary</label>
    <input
      type="text"
      name="summary"
      id="summary"
      value="<%= product.summary %>"
      maxlength="250"
      required
    />
  </p>
  <p>
    <label for="price">Price(â‚¹)</label>
    <input
      type="number"
      name="price"
      id="price"
      value="<%= product.price %>"
      min="50"
      step="1"
      required
    />
  </p>
  <p>
    <label for="description">Description</label>
    <textarea name="description" id="description" rows="5" required><%= product.description %></textarea>
  </p>
  <p>
    <button type="reset" class="btn btn-alt">Reset</button>
    <button type="submit" class="btn">Save</button>
  </p>
</form>